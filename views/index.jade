extends layout

block content
  h1= title
  p Welcome to #{title}
  form(id='signUp')
    p City:
      input(type='text', name='city', placeholder='city', required="")
    p Move in date:
      input(type='date', name='moveIn', placeholder='1/1/2016')
    p Move out date:
      input(type='date', name='moveOut', placeholder='1/1/2016')
    p Number of guests:
      input(type='text', name='numGuests', placeholder='1')
    p Minimum price:
      input(type='text', name='priceMin', placeholder='0')
    p Maximum price:
      input(type='text', name='priceMax', placeholder='1000+')
    p Number of bedrooms:
      input(type='text', name='numBedrooms', placeholder='1')
    p Number of bathrooms:
      input(type='text', name='numBathrooms', placeholder='1')
    p Number of beds:
      input(type='text', name='numBeds', placeholder='1')
    p Root type:
      ul
        li Entire
          input(type='checkbox', name='roomTypeEntire')
        li Private
          input(type='checkbox', name='roomTypePrivate')
        li Shared
          input(type='checkbox', name='roomTypeShared')
    p Your Email:
      input(type='email', name='email', placeholder='you@email.com', required="")
    p
      input(type='submit', id='submitSignUp', value='Sign Up')
